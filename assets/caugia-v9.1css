/* -----------------------------------------------------------
   CORE VARIABLES
----------------------------------------------------------- */
:root {
  --ink: #0B132B;
  --blue: #0046A5;
  --silver: #E6E9EF;
  --light: #F8FAFC;
  --radius: 10px;
  --transition: 0.22s ease;
  --maxw: 1180px;
}

/* -----------------------------------------------------------
   GLOBAL RESET
----------------------------------------------------------- */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

html {
  font-family: Inter, -apple-system, BlinkMacSystemFont, Arial, sans-serif;
  color: var(--ink);
  background: white;
}

body {
  min-height: 100vh;
}

/* -----------------------------------------------------------
   HEADER — SMALL CONSISTENT LOGO
----------------------------------------------------------- */
header {
  background: white;
  border-bottom: 1px solid #eee;
}

header .inner {
  max-width: var(--maxw);
  margin: 0 auto;
  height: 64px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 20px;
}

header .brand {
  display: flex;
  align-items: center;
  gap: 8px;
  text-decoration: none;
}

header .brand img {
  width: 32px;
  height: 32px;
}

header .brand span {
  font-weight: 600;
  font-size: 18px;
  color: var(--ink);
}

.nav-desktop a {
  margin-left: 24px;
  text-decoration: none;
  color: var(--ink);
  font-size: 15px;
}

.nav-desktop a.cta {
  padding: 8px 14px;
  background: var(--blue);
  border-radius: var(--radius);
  color: white;
}

/* -----------------------------------------------------------
   GI STRUCTURE
----------------------------------------------------------- */
.gi-main {
  display: flex;
  justify-content: center;
  padding: 40px 0;
  background: white;
}

.gi-shell {
  width: 100%;
  max-width: 1400px;
  display: grid;
  grid-template-columns: 260px 1fr 260px;
  gap: 30px;
  padding: 0 20px;
}

/* -----------------------------------------------------------
   LEFT SIDEBAR
----------------------------------------------------------- */
.gi-left-title {
  font-size: 13px;
  text-transform: uppercase;
  color: var(--blue);
  margin-bottom: 6px;
}

.gi-left-h1 {
  font-size: 26px;
  font-weight: 700;
  margin-bottom: 12px;
}

.gi-left-desc {
  font-size: 15px;
  line-height: 1.5;
  margin-bottom: 18px;
}

.gi-left-meta {
  font-size: 14px;
  color: #666;
  margin-bottom: 26px;
}

.gi-left-subheading {
  font-size: 13px;
  text-transform: uppercase;
  margin-bottom: 10px;
  color: var(--blue);
}

.gi-left-pillar-list {
  list-style: none;
}

.gi-left-pillar-list li {
  padding: 8px 0;
  font-size: 14px;
  cursor: pointer;
  color: #444;
}

.gi-left-pillar-list li.active {
  font-weight: 700;
  color: var(--blue);
}

.gi-left-faq {
  display: inline-block;
  margin-top: 20px;
  font-size: 14px;
  color: var(--blue);
}

/* -----------------------------------------------------------
   CENTER CARD
----------------------------------------------------------- */
.gi-question-card {
  background: white;
  border: 1px solid #eee;
  border-radius: var(--radius);
  padding: 32px;
}

.gi-question-header {
  margin-bottom: 20px;
}

.gi-question-kicker {
  font-size: 13px;
  color: var(--blue);
  text-transform: uppercase;
  margin-bottom: 4px;
}

.gi-question-title {
  font-size: 22px;
  font-weight: 600;
  margin-bottom: 6px;
}

.gi-question-sub {
  font-size: 14px;
  color: #666;
}

/* -----------------------------------------------------------
   INPUTS — TEXT, TEXTAREA, SELECT
----------------------------------------------------------- */
.gi-question-body input[type="text"],
.gi-question-body input[type="number"],
.gi-question-body textarea,
.gi-question-body select {
  width: 100%;
  padding: 12px;
  font-size: 15px;
  border: 1px solid #ccd3dd;
  border-radius: var(--radius);
  outline: none;
  background: #FAFCFF;
  transition: var(--transition);
}

.gi-question-body textarea {
  height: 130px;
  resize: vertical;
}

.gi-question-body input:focus,
.gi-question-body textarea:focus,
.gi-question-body select:focus {
  border-color: var(--blue);
  background: white;
}

/* -----------------------------------------------------------
   GROUP FIELDS
----------------------------------------------------------- */
.gi-group {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 18px;
}

.gi-group .full {
  grid-column: 1 / -1;
}

/* LABEL STYLE */
.gi-field label {
  display: block;
  font-size: 14px;
  margin-bottom: 6px;
}

.gi-field {
  display: flex;
  flex-direction: column;
}

/* -----------------------------------------------------------
   RADIO OPTION CARDS
----------------------------------------------------------- */
.gi-option-card {
  display: flex;
  align-items: center;
  gap: 10px;
  border: 1px solid #ccd3dd;
  border-radius: var(--radius);
  padding: 12px;
  margin-bottom: 10px;
  cursor: pointer;
  background: white;
  transition: var(--transition);
}

.gi-option-card:hover {
  border-color: var(--blue);
}

.gi-option-card input {
  transform: scale(1.2);
}

/* -----------------------------------------------------------
   NAV BUTTONS
----------------------------------------------------------- */
.gi-nav-row {
  display: flex;
  justify-content: space-between;
  margin-top: 30px;
}

.gi-btn {
  padding: 10px 18px;
  border-radius: var(--radius);
  border: 1px solid #ccd3dd;
  background: #f5f7fa;
  cursor: pointer;
  font-size: 14px;
  transition: var(--transition);
}

.gi-btn:hover {
  background: #e8ecf2;
}

.gi-btn.gi-primary {
  background: var(--blue);
  border-color: var(--blue);
  color: white;
}

/* -----------------------------------------------------------
   RIGHT SIDEBAR
----------------------------------------------------------- */
.gi-progress-box {
  border: 1px solid #eee;
  padding: 20px;
  border-radius: var(--radius);
  background: white;
}

.gi-progress-top {
  display: flex;
  justify-content: space-between;
  font-size: 14px;
  margin-bottom: 10px;
}

.gi-progress-track {
  width: 100%;
  height: 6px;
  background: #e4e8f0;
  border-radius: 20px;
  overflow: hidden;
  margin-bottom: 16px;
}

.gi-progress-fill {
  width: 0%;
  height: 100%;
  background: var(--blue);
}

.gi-right-pillar-name {
  font-size: 16px;
  font-weight: 600;
  margin-bottom: 4px;
}

.gi-right-pillar-desc {
  font-size: 14px;
  color: #666;
  line-height: 1.45;
}

/* -----------------------------------------------------------
   MOBILE
----------------------------------------------------------- */
@media (max-width: 960px) {
  .gi-shell {
    grid-template-columns: 1fr;
  }
  .gi-left, .gi-right {
    display: none;
  }
  .gi-question-card {
    padding: 22px;
  }
  .gi-group {
    grid-template-columns: 1fr;
  }
}

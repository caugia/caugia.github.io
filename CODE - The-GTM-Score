<script>
  // ==========================================================
  // SCORE LOGIC
  // ==========================================================

  function getScoreFromURL() {
    const params = new URLSearchParams(window.location.search);
    return parseInt(params.get("score"), 10);
  }

  const score = getScoreFromURL();
  const scoreEl = document.getElementById("gtm-score");
  const bandEl = document.getElementById("gtm-band");
  const descEl = document.getElementById("gtm-band-description");

  if (!isNaN(score)) {
    scoreEl.textContent = score;

    let band = "";
    let desc = "";

    if (score < 30) {
      band = "At Risk";
      desc = "Your GTM system has multiple constraints that require attention.";
    } else if (score < 50) {
      band = "Emerging";
      desc = "Your GTM foundations are forming but lack consistency and alignment.";
    } else if (score < 70) {
      band = "Developing";
      desc = "Your system shows progress with several capabilities performing well.";
    } else if (score < 85) {
      band = "Strong";
      desc = "Your GTM system is running with clarity and discipline, with room for refinement.";
    } else {
      band = "Best in Class";
      desc = "You have a highly aligned and scalable GTM engine.";
    }

    bandEl.textContent = band;
    descEl.textContent = desc;
  }
</script>


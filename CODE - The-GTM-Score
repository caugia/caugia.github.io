<!-- ==========================================================
     JS â€” SCORE + 12-PILLAR LOGIC
=========================================================== -->
<script>
  function getScoreFromURL() {
    const params = new URLSearchParams(window.location.search);
    return parseInt(params.get("score"), 10);
  }

  const score = getScoreFromURL();
  const scoreEl = document.getElementById("gtm-score");
  const bandEl = document.getElementById("gtm-band");
  const descEl = document.getElementById("gtm-band-description");

  if (!isNaN(score)) {
    scoreEl.textContent = score;

    let band = "";
    let desc = "";

    if (score < 30) {
      band = "At Risk";
      desc = "Your GTM system has multiple constraints that require attention.";
    } else if (score < 50) {
      band = "Emerging";
      desc = "Your GTM foundations are forming but lack consistency and alignment.";
    } else if (score < 70) {
      band = "Developing";
      desc = "Your system shows progress with several capabilities performing well.";
    } else if (score < 85) {
      band = "Strong";
      desc = "Your GTM system is running with clarity and discipline, with room for refinement.";
    } else {
      band = "Best in Class";
      desc = "You have a highly aligned and scalable GTM engine.";
    }

    bandEl.textContent = band;
    descEl.textContent = desc;
  }


  /* ==========================================================
     RADAR (12-pillar)
  ========================================================== */

  const GTM_PILLAR_LABELS = [
    "GTM Strategy & Leadership",
    "Market Intelligence",
    "Product Marketing",
    "Demand Generation",
    "Sales Development (SDR)",
    "Sales Execution",
    "Customer Success & Retention",
    "Account Management & Expansion",
    "Revenue Operations",
    "Enablement",
    "Performance Management",
    "Pricing & Packaging"
  ];

  function getPillarsFromURL() {
    const params = new URLSearchParams(window.location.search);
    const raw = params.get("pillars");
    if (!raw) return null;

    const parts = raw.split(",").map(n => parseInt(n, 10));
    if (parts.length !== 12 || parts.some(isNaN)) return null;

    return parts;
  }

  const pillarScores = getPillarsFromURL();

  if (pillarScores && window.Chart) {
    const ctx = document.getElementById("gtmPatternRadar");

    new Chart(ctx, {
      type: "radar",
      data: {
        labels: GTM_PILLAR_LABELS,
        datasets: [{
          data: pillarScores,
          fill: true,
          backgroundColor: "rgba(0,70,165,0.10)",
          borderColor: "#0046A5",
          pointBackgroundColor: "#0046A5",
          pointRadius: 3
        }]
      },
      options: {
        responsive: true,
        plugins: { legend: { display: false }},
        scales: {
          r: {
            suggestedMin: 0,
            suggestedMax: 100,
            ticks: { display: false },
            angleLines: { color: "rgba(0,0,0,0.05)" },
            grid: { color: "rgba(0,0,0,0.08)" },
            pointLabels: {
              font: { size: 10 },
              color: "rgba(11,19,43,0.78)"
            }
          }
        }
      }
    });
  }


  /* ==========================================================
     GRIP DIAMOND ENGINE
  ========================================================== */

  function drawGripDiamond(g, r, i, p) {
    const svg = document.getElementById("gripDiamondSVG");
    if (!svg) return;

    const center = 130;
    const max = 100;

    function point(angle, value) {
      const rad = (Math.PI / 180) * angle;
      return {
        x: center + Math.cos(rad) * value,
        y: center + Math.sin(rad) * value
      };
    }

    const G = point(-90, g);
    const I = point(0, i);
    const P = point(90, p);
    const R = point(180, r);

    const rings = [30, 60, 90];
    let grid = "";

    rings.forEach(val => {
      const rg = point(-90, val);
      const ri = point(0, val);
      const rp = point(90, val);
      const rr = point(180, val);

      grid += `
        <polygon 
          points="${rg.x},${rg.y} ${ri.x},${ri.y} ${rp.x},${rp.y} ${rr.x},${rr.y}"
          fill="none"
          stroke="rgba(0,0,0,0.08)"
          stroke-width="1"
        />
      `;
    });

    const shape = `
      <polygon
        points="${G.x},${G.y} ${I.x},${I.y} ${P.x},${P.y} ${R.x},${R.y}"
        fill="rgba(0,70,165,0.12)"
        stroke="#0046A5"
        stroke-width="2.4"
      />
    `;

    svg.innerHTML = grid + shape;
  }

  document.addEventListener("DOMContentLoaded", () => {
    const g = parseInt(document.getElementById("gripGuidanceValue").textContent, 10);
    const r = parseInt(document.getElementById("gripResourcesValue").textContent, 10);
    const i = parseInt(document.getElementById("gripImplementationValue").textContent, 10);
    const p = parseInt(document.getElementById("gripPerformanceValue").textContent, 10);

    drawGripDiamond(g, r, i, p);
  });
</script>

</body>
